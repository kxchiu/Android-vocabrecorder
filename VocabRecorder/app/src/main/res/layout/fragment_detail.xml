<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_marginLeft="5dp"
    >

    <TextView
        android:id="@+id/txtWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word"
        android:maxLines="5"
        android:textSize="24dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/txtType1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Part of Speech 1"
        android:textSize="12dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/txtDef1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Definition"
            android:textSize="16dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/txtSyn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synonyms"
            android:textSize="16dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Part of Speech 2"
            android:textSize="12dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/txtDef2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Definition: "
            android:textSize="16dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/txtSyn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synonym: "
            android:textSize="16dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

</LinearLayout>